<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://127.0.0.1:3306/test?user=root</property>
        <property name="connection.username">root</property>
        <property name="connection.password">password</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>
        <mapping class="mate.academy.hibernate.relations.model.CinemaHall"/>
        <mapping class="mate.academy.hibernate.relations.model.Movie"/>
        <mapping class="mate.academy.hibernate.relations.model.MovieSession"/>
        <mapping class="mate.academy.hibernate.relations.model.User"/>
    </session-factory>
</hibernate-configuration>