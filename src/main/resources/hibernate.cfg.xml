<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name = "hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name = "hibernate.connection.url">jdbc:mysql://localhost/ticket_app?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC</property>
        <property name = "hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.username">mate</property>
        <property name="connection.password">mate</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>

        <mapping class="mate.academy.model.CinemaHall"/>
        <mapping class="mate.academy.model.Movie"/>
        <mapping class="mate.academy.model.MovieSession"/>
        <mapping class="mate.academy.model.User"/>
    </session-factory>
</hibernate-configuration>
